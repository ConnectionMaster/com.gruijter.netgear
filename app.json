				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				]
			},
			{
				"id": "update_firmware",
				"title": {
					"en": "Update router firmware",
					"nl": "Update router firmware"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				]
			},
			{
				"id": "reboot",
				"title": {
					"en": "Reboot router",
