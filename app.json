{
  "id": "com.gruijter.netgear",
  "name": {
      "en": "Netgear Router"
  },
  "description": {
    "en": "monitor your Netgear router",
    "nl": "verbind je Netgear router"
  },
  "version": "2.3.3",
	"sdk": 2,
  "compatibility": ">= 1.5",
  "author": {
      "name": "Robin Gruijter",
      "email": "gruijter@hotmail.com"
  },
	"copyright": "Robin de Gruijter (gruijter@hotmail.com)",
	"license": " GPL-3.0-or-later",
	"contributing": {
		"donate": {
			"paypal": {
				"username": "gruijter"
			}
		}
	},
	"bugs": {
	"url": "https://github.com/gruijter/com.gruijter.netgear/issues"
	},
	"homeyCommunityTopicId": 2259,

  "images": {
    "large": "./assets/images/large.jpg",
    "small": "./assets/images/small.jpg"
  },

  "category": [ "tools", "internet" ],

	"capabilities": {
			"internet_connection_status": {
					"type": "boolean",
					"title": {
							"en": "Internet connected",
							"nl": "Internet verbonden"
					},
					"getable": true,
					"setable": false,
					"insights": true,
					"icon": "./drivers/netgear/assets/internet_connection_status.svg"
			},
			"download_speed": {
					"type": "number",
					"title": {
							"en": "Download speed",
							"nl": "Download snelheid"
					},
					"getable": true,
					"setable": false,
					"units": {
							"en": "Mbit/s"
					},
					"insights": true,
					"icon": "./drivers/netgear/assets/download_speed.svg"
			},
			"upload_speed": {
					"type": "number",
					"title": {
							"en": "Upload speed",
							"nl": "Upload snelheid"
					},
					"getable": true,
					"setable": false,
					"units": {
							"en": "Mbit/s"
					},
					"insights": true,
					"icon": "./drivers/netgear/assets/upload_speed.svg"
			},
			"attached_devices": {
					"type": "number",
					"title": {
							"en": "Attached devices",
							"nl": "Verbonden apparaten"
					},
					"getable": true,
					"setable": false,
					"insights": true,
					"icon": "./drivers/netgear/assets/attached_devices.svg"
			}
	},

  "drivers": [
    {
      "id": "netgear",
      "name": {
        "en": "Netgear",
        "nl": "Netgear"
      },
			"images": {
			 "large": "drivers/netgear/assets/images/large.jpg",
			 "small": "drivers/netgear/assets/images/small.jpg"
		 	},
      "class": "sensor",
      "capabilities": [ "internet_connection_status", "download_speed", "upload_speed", "attached_devices" ],
			"mobile": {
        "components": [
          {
            "id": "icon",
            "capabilities": [ ]
          },
          {
            "id": "sensor",
            "capabilities": [ "internet_connection_status", "download_speed", "upload_speed", "attached_devices" ],
            "options": {
              "icons": {
                "internet_connection_status": "./drivers/netgear/assets/internet_connection_status.svg",
                "download_speed": "./drivers/netgear/assets/download_speed.svg",
								"upload_speed": "./drivers/netgear/assets/upload_speed.svg",
								"attached_devices": "./drivers/netgear/assets/attached_devices.svg"
              },
              "internet_connection_status":{
                "noblink": false,
                "invert": true,
                "label": {
                  "true": {
                    "en": "yes",
                    "nl": "ja"
                  },
                  "false": {
                    "en": "no",
                    "nl": "nee"
                  }
                }
              }
            }
          }
        ]
      },
			"pair": [
				{
					"id": "start"
	      }
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Netgear router settings",
            "nl": "Netgear router instellingen"
          },
          "children": [
						{
							"id": "host",
							"type": "text",
							"label": {
								"en": "IP address",
								"nl": "IP adres"
							},
							"value": "netgear.net"
						},
						{
							"id": "port",
							"type": "number",
							"label": {
								"en": "SOAP port",
								"nl": "SOAP poort"
							},
							"value": 5000
						},
						{
              "id": "username",
              "type": "text",
              "label": {
                "en": "Username",
                "nl": "Gebruikersnaam"
              },
              "value": "admin"
            },
            {
              "id": "password",
              "type": "password",
              "label": {
                "en": "Password",
                "nl": "Wachtwoord"
              },
              "value": "password"
            },
						{
							"id": "polling_interval",
							"type": "number",
							"label": {
								"en": "Polling interval (seconds)",
								"nl": "Polling interval (seconden)"
							},
							"attr": { "min": 20 },
							"value": 60
						},
						{
							"id": "internet_connection_check",
							"type": "dropdown",
							"value": "netgear",
							"label": {
									"en": "Internet check"
							},
							"values": [
									{
											"id": "netgear",
											"label": {
													"en": "Netgear"
											}
									},
									{
											"id": "homey",
											"label": {
													"en": "Homey"
											}
									}
							],
							"hint": {
								"en": "Which device should check if the internet is connected",
								"nl": "Welk apparaat controleert of internet verbonden is"
							}
						}
					]
				},
				{
					"type": "group",
					"label": {
						"en": "Presence settings",
						"nl": "Aanwezigheid instellingen"
					},
					"children": [
						{
							"id": "offline_after",
							"type": "number",
							"label": {
								"en": "Offline after (seconds)",
								"nl": "Offline na (seconden)"
							},
							"attr": { "min": 60 },
							"value": 300
						},
						{
							"id": "clear_known_devices",
							"type": "checkbox",
							"label": {
								"en": "Delete devicelist (!)",
								"nl": "Apparaatlijst legen (!)"
							},
							"value": false,
							"hint": {
								"en": "When checked, the list of known devices will be emptied on save settings",
								"nl": "Aangevinkt: de lijst met bekende apparaten zal worden geleegd bij opslaan van de instellingen"
							}
						}
					]
				},
				{
          "type": "group",
          "label": {
            "en": "Netgear router information",
            "nl": "Netgear router informatie"
          },
          "children": [
						{
							"id": "model_name",
							"type": "label",
							"label": {
								"en": "Model",
								"nl": "Type"
							},
							"value": "unknown"
						},
						{
							"id": "serial_number",
							"type": "label",
							"label": {
								"en": "Serial number",
								"nl": "Serienummer"
							},
							"value": "unknown"
						},
						{
							"id": "firmware_version",
							"type": "label",
							"label": {
								"en": "Firmware version",
								"nl": "Firmware versie"
							},
							"value": "unknown"
						},
						{
							"id": "smart_agent_version",
							"type": "label",
							"label": {
								"en": "SmartAgent version",
								"nl": "SmartAgent versie"
							},
							"value": "unknown"
						}
					]
				}
			]
		}
	],
	"flow": {
		"triggers": [
  		{
        "id": "connection_start",
        "title": {
          "en": "The internet got connected",
					"nl": "Internet verbinding gemaakt"
    		},
	      "args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
	      ]
    	},
	    {
        "id": "connection_stop",
        "title": {
          "en": "The internet got disconnected",
					"nl": "Internet verbinding verbroken"
        },
        "args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
        ]
			},
			{
        "id": "uldl_speed_changed",
        "title": {
          "en": "The up/down speed changed",
					"nl": "Up/down snelheid gewijzigd"
        },
        "args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
        ],
        "tokens": [
          {
            "name": "upload_speed",
            "type": "number",
            "title": {
              "en": "up",
							"nl": "up"
            },
            "example": 5
          },
          {
            "name": "download_speed",
            "type": "number",
            "title": {
              "en": "down",
							"nl": "down"
            },
            "example": 1
        	}
		   	]
			},
			{
				"id": "device_online",
				"title": {
					"en": "A device came online",
					"nl": "Apparaat komt online"
				},
				"args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				],
				"tokens": [
					{
						"name": "mac",
						"type": "string",
						"title": {
							"en": "mac",
							"nl": "mac"
						},
						"example": "AA:BB:CC:DD:EE:FF"
					},
					{
						"name": "name",
						"type": "string",
						"title": {
							"en": "name",
							"nl": "naam"
						},
						"example": "iPhone"
					},
					{
						"name": "ip",
						"type": "string",
						"title": {
							"en": "ip",
							"nl": "ip"
						},
						"example": "10.0.0.10"
					}
				]
			},
			{
				"id": "device_offline",
				"title": {
					"en": "A device went offline",
					"nl": "Apparaat raakt offline"
				},
				"args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				],
				"tokens": [
					{
						"name": "mac",
						"type": "string",
						"title": {
							"en": "mac",
							"nl": "mac"
						},
						"example": "AA:BB:CC:DD:EE:FF"
					},
					{
						"name": "name",
						"type": "string",
						"title": {
							"en": "name",
							"nl": "naam"
						},
						"example": "iPhone"
					},
					{
						"name": "ip",
						"type": "string",
						"title": {
							"en": "ip",
							"nl": "ip"
						},
						"example": "10.0.0.10"
					}
				]
			},
			{
				"id": "new_attached_device",
				"title": {
					"en": "New connected device",
					"nl": "Nieuw verbonden apparaat"
				},
				"args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				],
				"tokens": [
					{
						"name": "mac",
						"type": "string",
						"title": {
							"en": "mac",
							"nl": "mac"
						},
						"example": "AA:BB:CC:DD:EE:FF"
					},
					{
						"name": "name",
						"type": "string",
						"title": {
							"en": "name",
							"nl": "naam"
						},
						"example": "iPhone"
					},
					{
						"name": "ip",
						"type": "string",
						"title": {
							"en": "ip",
							"nl": "ip"
						},
						"example": "10.0.0.10"
					}
			 	]
			},
			{
        "id": "speed_test_result",
        "title": {
          "en": "Speed test is ready",
					"nl": "Snelheidstest is klaar"
        },
        "args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
        ],
        "tokens": [
          {
            "name": "uplink_bandwidth",
            "type": "number",
            "title": {
              "en": "up",
							"nl": "up"
            },
            "example": 1
          },
          {
            "name": "downlink_bandwidth",
            "type": "number",
            "title": {
              "en": "down",
							"nl": "down"
            },
            "example": 5
        	},
					{
            "name": "average_ping",
            "type": "number",
            "title": {
              "en": "ping",
							"nl": "ping"
            },
            "example": 10
        	}
		   	]
			},
			{
				"id": "new_router_firmware",
				"title": {
					"en": "New router firmware available",
					"nl": "Er is nieuwe router firmware"
				},
				"args": [
					{
						"name": "netgear",
						"type": "device",
						"filter": "driver_id=netgear"
					}
				],
				"tokens": [
					{
						"name": "current_version",
						"type": "string",
						"title": {
							"en": "current",
							"nl": "huidig"
						},
						"example": "1.0.9.34"
					},
					{
						"name": "new_version",
						"type": "string",
						"title": {
							"en": "new",
							"nl": "nieuw"
						},
						"example": "1.0.9.42_10.2.44"
					},
					{
						"name": "release_note",
						"type": "string",
						"title": {
							"en": "info",
							"nl": "info"
						},
						"example": "security fixes"
					}
				]
			}
		],
		"conditions": [
			{
				"id": "device_online",
				"title": {
					"en": "Device !{{is|isn't}} online (mac)",
					"nl": "Apparaat !{{is|is niet}} online (mac)"
				},
				"args": [
					{
						"name": "NetgearDevice",
						"type": "device",
						"filter": "driver_id=netgear",
						"placeholder": {
							"en": "Which device",
							"nl": "Welk apparaat"
						 }
					},
					{
						"type": "autocomplete",
						"name": "mac",
						"placeholder": {
							"en": "AA:BB:CC:DD:EE:FF"
						}
					}
				]
			},
			{
				"id": "device_online_ip_range",
				"title": {
					"en": "!{{A|No}} device online on IP",
					"nl": "!{{Een|Geen}} apparaat online op IP"
				},
				"args": [
					{
						"name": "NetgearDevice",
						"type": "device",
						"filter": "driver_id=netgear",
						"placeholder": {
							"en": "Which device",
							"nl": "Welk apparaat"
						 }
					},
					{
						"type": "number",
						"name": "ip_from",
						"min": 1,
						"max": 255,
						"step": 1,
						"placeholder": {
							"en": "from (1)",
							"nl": "vanaf (1)"
						}
					},
					{
						"type": "number",
						"name": "ip_to",
						"min": 1,
						"max": 254,
						"step": 1,
						"placeholder": {
							"en": "to (254)",
							"nl": "tot (254)"
						}
					}
				]
			},
			{
				"id": "new_firmware_condition",
				"title": {
					"en": "!{{New|No}} firmware update",
					"nl": "!{{Er is|Geen}} nieuwe firmware"
				},
				"args": [
					{
						"name": "NetgearDevice",
						"type": "device",
						"filter": "driver_id=netgear",
						"placeholder": {
							"en": "Which device",
							"nl": "Welk apparaat"
						 }
					}
				]
			}
		],
    "actions": [
			{
				"id": "wol",
				"title": {
					"en": "WakeOnLan",
					"nl": "WakeOnLan"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=netgear"
					},
			    {
		        "type": "autocomplete",
		        "name": "mac",
		        "placeholder": {
		          "en": "AA:BB:CC:DD:EE:FF"
		        }
					},
          {
            "name": "password",
            "type": "text",
            "placeholder": {
              "en": "password"
						 },
						 "value": "00:00:00:00:00:00"
          }
				]
			},
			{
				"id": "block_device",
				"title": {
					"en": "Block a device",
					"nl": "Apparaat blokkeren"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=netgear"
					},
			    {
		        "type": "autocomplete",
		        "name": "mac",
		        "placeholder": {
		          "en": "AA:BB:CC:DD:EE:FF"
		        }
			    }
				]
			},
			{
				"id": "allow_device",
				"title": {
					"en": "Allow a device",
					"nl": "Apparaat vrijgeven"
				},
				"args": [
					{
						"name": "device",
						"type": "device",
						"filter": "driver_id=netgear"
					},
			    {
		        "type": "autocomplete",
		        "name": "mac",
		        "placeholder": {
		          "en": "AA:BB:CC:DD:EE:FF"
		        }
			    }
				]
			},
			{
				"id": "set_guest_wifi",
				"title": {
					"en": "Enable or disable guest wifi",
					"nl": "Gast wifi aan of uit zetten"
				},
				"args": [
					{
						"name": "device",
